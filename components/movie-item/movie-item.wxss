 .item {
   display: inline-block;
   width: 160rpx;
 }

 .poster {
   width: 100%;
   height: 230rpx;
   border-radius: 10rpx;
   border: 4rpx solid #eee;
 }

 .scoreWraper {
   overflow: hidden;
   text-overflow: ellipsis;
   margin-top: 10rpx;
 }

 .title {
   font-size: 24rpx;
   white-space: nowrap;
   font-weight: bold;
 }

 .star {
   width: 23rpx;
   height: 23rpx;
 }

 .score {
   margin-left: 5rpx;

   color: #C0C0C0;
   font-size: 18rpx;
 }