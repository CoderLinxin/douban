.container {
  font-size: 26rpx;
  line-height: 26rpx;
}

.searchBg {
  display: flex;
  align-items: center;
  justify-content: center;

  padding: 20rpx 15rpx;
  background-color: #42BD55;
}

.searchWraper {
  display: flex;
  align-items: center;
  justify-content: center;

  width: 100%;
  height: 50rpx;
  border-radius: 10rpx;

  background-color: #fff;
}

.searchIcon {
  width: 35rpx;
  height: 35rpx;
}

.searchText {
  color: #C0C0C0;
}

.cinemaItem .top {
  display: flex;
  justify-content: space-between;
  align-items: center;

  height: 60rpx;
  margin: 20rpx 30rpx;
}

.cinemaItem .hot {
  font-size: 30rpx;
  font-weight: bold;
}

.cinemaItem .more {
  font-size: 28rpx;
  color: #36C240;
}

.itemWraper{
  height: 300rpx;
  margin-top: 30rpx;
  white-space: nowrap;
}

.itemWraper .item {
  margin-left: 30rpx;
}

.itemWraper .item:nth-last-of-type(1){
  margin-right: 30rpx;
}